# LLM Provider
LLM_PROVIDER=ollama

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_API_BASE=https://api.openai.com/v1
OPENAI_MODEL_NAME=gpt-3.5-turbo

# Ollama Configuration
OLLAMA_API_KEY=your_ollama_api_key_here
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL_NAME=mistral

# Embedding Model Configuration
EMBEDDING_MODEL=sentence-transformers
EMBEDDING_MODEL_NAME=paraphrase-MiniLM-L6-v2

# Vector Store Configuration
VECTOR_STORE_PATH=faiss_index

# Chain of Thoughts Configuration
CHAIN_OF_THOUGHTS_ENABLED=False
CHAIN_OF_THOUGHTS_PROMPT=Step 1: Analyze the question|Step 2: Retrieve relevant information|Step 3: Formulate an answer

# Example Prompts
EXAMPLE_PROMPTS=You should response like this sample 

# Upload Directory
UPLOAD_DIRECTORY=uploads